{
  "name": "capsulas-framework",
  "version": "4.0.0",
  "description": "The WordPress of Apps - Enterprise visual development framework with 67+ production-ready capsules. Build e-commerce, analytics pipelines, AI systems visually. Includes self-improvement workflows, distributed tracing, circuit breakers, and multi-region deployment.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "build:check": "tsc --project tsconfig.build.json --noEmit",
    "dev": "tsc --project tsconfig.build.json --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "npm run build"
  },
