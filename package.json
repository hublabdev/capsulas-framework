{
  "name": "capsulas-framework",
  "version": "0.1.0",
  "description": "The WordPress of Apps - Build production-ready applications visually in minutes",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@capsulas/web",
    "build": "npm run build --workspaces --if-present",
    "test": "vitest",
    "lint": "eslint packages/**/*.{js,ts,tsx}",
    "format": "prettier --write \"packages/**/*.{js,ts,tsx,json,md}\"",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules",
    "bootstrap": "npm install",
    "publish:all": "npm run build && lerna publish",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.55.0",
    "happy-dom": "^20.0.8",
    "lerna": "^8.0.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/capsulas.git"
  },
  "keywords": [
    "visual-programming",
    "low-code",
    "n8n-alternative",
    "workflow",
    "automation",
    "typescript",
    "framework"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/capsulas/issues"
  },
  "homepage": "https://github.com/yourusername/capsulas#readme"
}
