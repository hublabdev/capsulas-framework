{
  "name": "capsulas-framework",
  "version": "3.0.0",
  "description": "The WordPress of Apps - Complete visual development framework with 32 production-ready capsules including Auth (JWT, OAuth, Google), AI Chat, Database, Payments, Email, and more. Build apps visually in minutes.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "build:check": "tsc --project tsconfig.build.json --noEmit",
    "dev": "tsc --project tsconfig.build.json --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "capsulas",
    "capsules",
    "visual-programming",
    "low-code",
    "no-code",
    "workflow",
    "automation",
    "framework",
    "typescript",
    "javascript",
    "auth",
    "jwt",
    "oauth",
    "google-oauth",
    "database",
    "postgresql",
    "ai",
    "openai",
    "gpt",
    "payments",
    "stripe",
    "email",
    "sendgrid",
    "http-client",
    "websocket",
    "markdown",
    "forms",
    "n8n-alternative",
    "zapier-alternative"
  ],
  "author": "HubLab <info@hublab.dev>",
  "license": "MIT",
  "homepage": "https://hublab.dev",
  "bugs": {
    "url": "https://github.com/hublabdev/capsulas-framework/issues"
  },
  "dependencies": {
    "tslib": "^2.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "eslint": "^8.55.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hublabdev/capsulas-framework.git",
    "directory": "packages/capsules"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
